{
    "name": "demo",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node index.js",
        "test": "jest",
        "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=clover --coverageReporters=cobertura --coverageReporters=json-summary",
        "lint": "eslint . --ext .js --format json --output-file eslint-report.json --fix-dry-run && eslint . --ext .js --format html --output-file eslint-report.html",
        "lint:fix": "eslint . --ext .js --fix",
        "quality-check": "npm run lint && npm run test:coverage"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverage": false,
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html",
            "clover",
            "cobertura",
            "json-summary"
        ],
        "collectCoverageFrom": [
            "**/*.js",
            "!node_modules/**",
            "!coverage/**",
            "!*.config.js",
            "!*.test.js",
            "!jest.config.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        },
        "testMatch": [
            "**/__tests__/**/*.js",
            "**/*.test.js"
        ],
        "transform": {
            "^.+\\.js?$": "babel-jest"
        }
    },
    "author": "Devsu",
    "dependencies": {
        "express": "4.18.2",
        "sequelize": "6.31.0",
        "sqlite3": "5.1.6",
        "yup": "1.0.2"
    },
    "devDependencies": {
        "@babel/preset-env": "7.21.4",
        "@types/express": "4.17.17",
        "babel-jest": "29.5.0",
        "dotenv": "16.0.3",
        "eslint": "8.57.0",
        "jest": "29.5.0",
        "jest-junit": "16.0.0",
        "supertest": "6.3.3"
    }
}
